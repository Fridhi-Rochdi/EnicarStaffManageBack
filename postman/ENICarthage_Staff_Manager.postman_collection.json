{
  "info": {
    "name": "ENICarthage Staff Manager API",
    "description": "Collection pour tester l'API de gestion du personnel ENICarthage",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8080/api",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Login - Professor",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.collectionVariables.set('token', jsonData.data.token);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"prof.dupont@enicarthage.tn\",\n  \"password\": \"prof123\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{base_url}}/auth/login",
              "host": ["{{base_url}}"],
              "path": ["auth", "login"]
            }
          }
        },
        {
          "name": "Login - Admin",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.collectionVariables.set('token', jsonData.data.token);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@enicarthage.tn\",\n  \"password\": \"admin123\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{base_url}}/auth/login",
              "host": ["{{base_url}}"],
              "path": ["auth", "login"]
            }
          }
        },
        {
          "name": "Get Current User",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}/auth/me",
              "host": ["{{base_url}}"],
              "path": ["auth", "me"]
            }
          }
        },
        {
          "name": "Register New User",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"newprof@enicarthage.tn\",\n  \"password\": \"password123\",\n  \"firstName\": \"Marie\",\n  \"lastName\": \"Martin\",\n  \"role\": \"PROFESSOR\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{base_url}}/auth/register",
              "host": ["{{base_url}}"],
              "path": ["auth", "register"]
            }
          }
        }
      ]
    },
    {
      "name": "Tickets",
      "item": [
        {
          "name": "Create Ticket (JSON only)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}",
                "type": "text"
              }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "ticket",
                  "value": "{\"title\":\"Mathématiques - Algèbre Linéaire\",\"description\":\"Notes de cours pour le chapitre 3\",\"fileType\":\"COURS\",\"totalNumber\":25}",
                  "type": "text"
                }
              ]
            },
            "url": {
              "raw": "{{base_url}}/tickets",
              "host": ["{{base_url}}"],
              "path": ["tickets"]
            }
          }
        },
        {
          "name": "Create Ticket (With File)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}",
                "type": "text"
              }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "ticket",
                  "value": "{\"title\":\"Physique - Mécanique\",\"description\":\"TD numéro 5\",\"fileType\":\"TRAVEAUX_DIRIGES\",\"totalNumber\":30}",
                  "type": "text"
                },
                {
                  "key": "file",
                  "type": "file",
                  "src": []
                }
              ]
            },
            "url": {
              "raw": "{{base_url}}/tickets",
              "host": ["{{base_url}}"],
              "path": ["tickets"]
            }
          }
        },
        {
          "name": "Get All Tickets (Admin/Staff)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}/tickets",
              "host": ["{{base_url}}"],
              "path": ["tickets"]
            }
          }
        },
        {
          "name": "Get My Tickets",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}/tickets/my-tickets",
              "host": ["{{base_url}}"],
              "path": ["tickets", "my-tickets"]
            }
          }
        },
        {
          "name": "Get Ticket By ID",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}/tickets/1",
              "host": ["{{base_url}}"],
              "path": ["tickets", "1"]
            }
          }
        },
        {
          "name": "Update Ticket",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}",
                "type": "text"
              }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "ticket",
                  "value": "{\"title\":\"Mathématiques - Algèbre Linéaire (Modifié)\",\"description\":\"Version mise à jour\",\"fileType\":\"COURS\",\"totalNumber\":30}",
                  "type": "text"
                }
              ]
            },
            "url": {
              "raw": "{{base_url}}/tickets/1",
              "host": ["{{base_url}}"],
              "path": ["tickets", "1"]
            }
          }
        },
        {
          "name": "Update Ticket Status",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}/tickets/1/status?status=EN_COURS",
              "host": ["{{base_url}}"],
              "path": ["tickets", "1", "status"],
              "query": [
                {
                  "key": "status",
                  "value": "EN_COURS"
                }
              ]
            }
          }
        },
        {
          "name": "Delete Ticket",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}/tickets/1",
              "host": ["{{base_url}}"],
              "path": ["tickets", "1"]
            }
          }
        }
      ]
    },
    {
      "name": "Test",
      "item": [
        {
          "name": "Health Check",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/test/health",
              "host": ["{{base_url}}"],
              "path": ["test", "health"]
            }
          }
        },
        {
          "name": "Public Endpoint",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/test/public",
              "host": ["{{base_url}}"],
              "path": ["test", "public"]
            }
          }
        }
      ]
    }
  ]
}
